@{
    ViewData["Title"] = "Manage";
    ViewBag.Favicon = "Manage.svg";
    ViewBag.Css = "Manage.css";
}
@section Home
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Admins" asp-action="Index"><img src="~/img/Dasboard.svg"/> Home</a>
    </li>
}

@section Session
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Logout"><img src="~/img/Logout.svg" class="m-1"/>Logout</a>
    </li>
}
<a class="btn btn-success mb-3 mt-3" asp-controller="Admins" asp-action="Register">New employee</a>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Cedula</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Password</th>
            <th>History</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Employee in Model)
        {
            @if(@Employee.TipoUser == 2)
            {
                <tr>
                    <td>
                        <img src="~/users/@Employee.PhotoProfile" class="img-profile"/> @Employee.Names @Employee.LastNames
                    </td>
                    <td>@Employee.Cedula</td>
                    <td>@Employee.Phone</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.Password</td>
                    <td>
                        <a asp-controller="Admins" asp-action="Record"
                           asp-route-id="@Employee.Id" class="btn-record">Record</a>
                    </td>
                    <td>
                        <a asp-controller="Admins" asp-action="Delete"
                           asp-route-id="@Employee.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
