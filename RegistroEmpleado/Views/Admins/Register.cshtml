@model User;
@{
    ViewBag.Title = "LogUp";
    ViewBag.Css = "LogUp.css";
    ViewBag.Favicon = "Register.svg";
}

@section Home
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Admins" asp-action="Index"><img src="~/img/Dasboard.svg"/> Home</a>
    </li>
}

<section class="container_form">
    <form asp-action="Register" method="post">
        <div class="form">
            <p class="title">New employee</p>
            <div class="full_name">
                <div>
                    <label for="name">Names</label>
                    <input asp-for="Names" type="text" id="name" class="form-control"/>
                </div>
                <div>
                    <label for="last_name">Last name</label>
                    <input asp-for="LastNames" type="text" id="last_name" class="form-control"/>
                </div>
            </div>
            <div class="container_forms">
                <label for="NI">Identification card</label>
                <input asp-for="Cedula" type="number" id="NI" class="form-control"/>
            </div>
            <div class="container_forms">
                <label for="Phone">Phone</label>
                <input asp-for="Phone" type="number" id="Phone" class="form-control"/>
            </div>
            <div class="container_forms">
                <label for="email">Email</label>
                <input asp-for="Email" type="email" id="email" class="form-control"/>
            </div>
            <div class="container_forms">
                <label for="password">Password</label>
                <input
                    asp-for="Password"
                    type="password"
                    id="password"
                    class="form-control"/>
            </div>
            <div class="container_forms">
                <label for="password2">Confirm password</label>
                <input
                    type="password"
                    id="password2"
                    class="form-control"/>
            </div>

            <!-- sing up button -->

            <div class="btn_register">
                <button class="btn btn-success" type="submit">Create</button>
            </div>
        </div>
    </form>
</section>