@{
    ViewBag.Title = "Login";
    ViewBag.Css = "Login.css";
    ViewBag.Favicon = "Login.svg";
}

@section Home
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Dasboard.svg"/> Home</a>
    </li>
}

<!-- Forms container -->

<section class="container_form">
    <div class="form">
        <p class="title">Inicio de sesion</p>
        <form asp-controller="Login" asp-action="Acceder" method="get">
            <div class="container_forms">
                <div class="mb-3">
                    <label for="nameUser" class="form-label">Nombre del usuario</label>
                    <input type="text" class="form-control @ViewBag.ClaseElemento" id="nameUser" name="username">
                </div>
            </div>
            <div class="container_forms">
                <label for="inputPassword5" class="form-label">Contrase√±a</label>
                <input type="password" id="inputPassword5" class="form-control @ViewBag.ClaseElemento" aria-describedby="passwordHelpBlock" name="password">
            </div>
            <!-- sing in button -->

            <div class="btn_login">
                <input type="submit" class="button2" value="Acceder">
            </div>
        </form>
    </div>
    <span class="text-danger mt-3">@ViewBag.Danger</span>
</section>